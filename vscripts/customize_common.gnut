		pdc.quantity = 1
		pdc.markAsNew = false
		pdc.onPurchaseStartCallback = void function() : ( cbc ) {
			fileLevel.isUnlockOperationActive = true
			RuiSetBool( Hud_GetRui( cbc.button ), "isLoading", true )
